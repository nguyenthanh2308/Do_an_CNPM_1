@model HotelManagementSystem.Models.ViewModels.Guest.GuestViewModel

@{
    ViewData["Title"] = "Xóa khách hàng";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-danger">
            <i class="fas fa-user-times me-2"></i>
            Xóa khách hàng
        </h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Quay lại
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Warning Alert -->
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <h5 class="alert-heading">
                    <i class="fas fa-exclamation-triangle me-2"></i>Cảnh báo!
                </h5>
                <p class="mb-0">
                    Bạn có chắc chắn muốn xóa khách hàng <strong>@Model.FullName</strong> không?
                    Hành động này không thể hoàn tác!
                </p>
            </div>

            @if (Model.TotalBookings > 0)
            {
                <div class="alert alert-warning" role="alert">
                    <h5 class="alert-heading">
                        <i class="fas fa-ban me-2"></i>Không thể xóa!
                    </h5>
                    <p class="mb-0">
                        Khách hàng này đã có <strong>@Model.TotalBookings booking</strong> trong hệ thống.
                        Không thể xóa khách hàng đã có booking.
                    </p>
                </div>
            }

            <!-- Guest Details -->
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Thông tin khách hàng sẽ bị xóa
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">
                            <i class="fas fa-user me-2"></i>Họ và tên
                        </dt>
                        <dd class="col-sm-8">
                            <strong>@Model.FullName</strong>
                        </dd>

                        <dt class="col-sm-4">
                            <i class="fas fa-hashtag me-2"></i>ID
                        </dt>
                        <dd class="col-sm-8">
                            @Model.Id
                        </dd>

                        @if (Model.HasIdNumber)
                        {
                            <dt class="col-sm-4">
                                <i class="fas fa-id-badge me-2"></i>CMND/CCCD
                            </dt>
                            <dd class="col-sm-8">
                                @Model.IdNumber
                            </dd>
                        }

                        @if (Model.HasEmail)
                        {
                            <dt class="col-sm-4">
                                <i class="fas fa-envelope me-2"></i>Email
                            </dt>
                            <dd class="col-sm-8">
                                @Model.Email
                            </dd>
                        }

                        @if (Model.HasPhone)
                        {
                            <dt class="col-sm-4">
                                <i class="fas fa-phone me-2"></i>Số điện thoại
                            </dt>
                            <dd class="col-sm-8">
                                @Model.Phone
                            </dd>
                        }

                        <dt class="col-sm-4">
                            <i class="fas fa-calendar-plus me-2"></i>Ngày tạo
                        </dt>
                        <dd class="col-sm-8">
                            @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                        </dd>

                        <dt class="col-sm-4">
                            <i class="fas fa-crown me-2"></i>Phân loại
                        </dt>
                        <dd class="col-sm-8">
                            <span class="badge @Model.CustomerTypeBadgeClass">
                                @Model.CustomerTypeDisplay
                            </span>
                        </dd>

                        <dt class="col-sm-4">
                            <i class="fas fa-shopping-cart me-2"></i>Tổng booking
                        </dt>
                        <dd class="col-sm-8">
                            <strong class="@(Model.TotalBookings > 0 ? "text-danger" : "text-success")">
                                @Model.TotalBookings
                            </strong>
                        </dd>

                        @if (Model.TotalBookings > 0)
                        {
                            <dt class="col-sm-4">
                                <i class="fas fa-check me-2"></i>Booking hoàn thành
                            </dt>
                            <dd class="col-sm-8 text-success">
                                @Model.CompletedBookings
                            </dd>

                            <dt class="col-sm-4">
                                <i class="fas fa-times me-2"></i>Booking đã hủy
                            </dt>
                            <dd class="col-sm-8 text-danger">
                                @Model.CancelledBookings
                            </dd>

                            <dt class="col-sm-4">
                                <i class="fas fa-dollar-sign me-2"></i>Tổng chi tiêu
                            </dt>
                            <dd class="col-sm-8">
                                <strong class="text-success">@Model.TotalSpent.ToString("N0") VNĐ</strong>
                            </dd>
                        }
                    </dl>
                </div>
            </div>

            <!-- Confirm Delete Form -->
            @if (Model.TotalBookings == 0)
            {
                <div class="card shadow mt-4">
                    <div class="card-body">
                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="Id" />
                            
                            <div class="d-flex gap-2 justify-content-end">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash-alt me-2"></i>
                                    Xác nhận xóa
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-times me-2"></i>
                                    Hủy bỏ
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <div class="card shadow mt-4 border-warning">
                    <div class="card-body text-center">
                        <i class="fas fa-ban fa-3x text-warning mb-3"></i>
                        <h5 class="text-warning">Không thể xóa khách hàng này</h5>
                        <p class="text-muted mb-3">
                            Khách hàng đã có booking trong hệ thống. Vui lòng xử lý các booking trước khi xóa.
                        </p>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Quay lại
                        </a>
                    </div>
                </div>
            }
        </div>

        <!-- Side Panel -->
        <div class="col-lg-4">
            <!-- Impact Warning -->
            <div class="card shadow mb-4 border-danger">
                <div class="card-header bg-danger text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        Tác động khi xóa
                    </h6>
                </div>
                <div class="card-body">
                    <ul class="mb-0">
                        <li class="mb-2">
                            <i class="fas fa-times-circle text-danger me-2"></i>
                            Thông tin khách hàng sẽ bị xóa vĩnh viễn
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-times-circle text-danger me-2"></i>
                            Không thể khôi phục sau khi xóa
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-ban text-danger me-2"></i>
                            Không thể xóa nếu đã có booking
                        </li>
                        <li class="mb-0">
                            <i class="fas fa-shield-alt text-info me-2"></i>
                            Dữ liệu booking không bị ảnh hưởng
                        </li>
                    </ul>
                </div>
            </div>

            @if (Model.TotalBookings > 0)
            {
                <!-- Booking Statistics -->
                <div class="card shadow mb-4 border-warning">
                    <div class="card-header bg-warning text-dark">
                        <h6 class="mb-0">
                            <i class="fas fa-chart-bar me-2"></i>
                            Thống kê booking
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-3">
                            <h1 class="text-danger mb-0">@Model.TotalBookings</h1>
                            <p class="text-muted mb-0">Booking trong hệ thống</p>
                        </div>
                        <div class="d-flex justify-content-around">
                            <div class="text-center">
                                <h4 class="text-success mb-0">@Model.CompletedBookings</h4>
                                <small class="text-muted">Hoàn thành</small>
                            </div>
                            <div class="text-center">
                                <h4 class="text-danger mb-0">@Model.CancelledBookings</h4>
                                <small class="text-muted">Đã hủy</small>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Alternative Actions -->
            <div class="card shadow">
                <div class="card-header bg-secondary text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-lightbulb me-2"></i>
                        Gợi ý
                    </h6>
                </div>
                <div class="card-body">
                    <p class="small mb-2">
                        <strong>Thay vì xóa, bạn có thể:</strong>
                    </p>
                    <ul class="small mb-3">
                        <li class="mb-2">Chỉnh sửa thông tin nếu sai sót</li>
                        <li class="mb-2">Giữ lại để tra cứu lịch sử</li>
                        <li class="mb-0">Liên hệ khách hàng để cập nhật thông tin</li>
                    </ul>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-warning w-100">
                        <i class="fas fa-edit me-2"></i>Chỉnh sửa thay vì xóa
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
