@model HotelManagementSystem.Models.ViewModels.Guest.GuestViewModel

@{
    ViewData["Title"] = "Thêm khách hàng mới";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-user-plus me-2"></i>
            Thêm khách hàng mới
        </h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Quay lại
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <!-- Basic Info Section -->
                        <div class="mb-4">
                            <h5 class="border-bottom pb-2 mb-3">
                                <i class="fas fa-user me-2"></i>Thông tin cơ bản
                            </h5>
                            
                            <div class="mb-3">
                                <label asp-for="FullName" class="form-label required">
                                    <i class="fas fa-id-card me-2"></i>@Html.DisplayNameFor(m => m.FullName)
                                </label>
                                <input asp-for="FullName" class="form-control" 
                                       placeholder="VD: Nguyễn Văn A" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="IdNumber" class="form-label">
                                    <i class="fas fa-id-badge me-2"></i>@Html.DisplayNameFor(m => m.IdNumber)
                                </label>
                                <input asp-for="IdNumber" class="form-control" 
                                       placeholder="VD: 123456789012" maxlength="32" />
                                <span asp-validation-for="IdNumber" class="text-danger"></span>
                                <small class="text-muted">CMND hoặc CCCD (không bắt buộc)</small>
                            </div>
                        </div>

                        <!-- Contact Info Section -->
                        <div class="mb-4">
                            <h5 class="border-bottom pb-2 mb-3">
                                <i class="fas fa-address-book me-2"></i>Thông tin liên hệ
                            </h5>
                            
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">
                                    <i class="fas fa-envelope me-2"></i>@Html.DisplayNameFor(m => m.Email)
                                </label>
                                <input asp-for="Email" type="email" class="form-control" 
                                       placeholder="VD: customer@example.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                                <small class="text-muted">Email phải là duy nhất trong hệ thống</small>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Phone" class="form-label">
                                    <i class="fas fa-phone me-2"></i>@Html.DisplayNameFor(m => m.Phone)
                                </label>
                                <input asp-for="Phone" type="tel" class="form-control" 
                                       placeholder="VD: 0123456789" maxlength="32" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Lưu
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Help Panel -->
        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header bg-info text-white">
                    <i class="fas fa-info-circle me-2"></i>Hướng dẫn
                </div>
                <div class="card-body">
                    <h6>Thông tin bắt buộc:</h6>
                    <ul class="small">
                        <li><strong>Họ và tên:</strong> Tên đầy đủ của khách hàng</li>
                    </ul>
                    <h6>Thông tin tùy chọn:</h6>
                    <ul class="small">
                        <li><strong>Email:</strong> Dùng để liên hệ và tra cứu booking</li>
                        <li><strong>Số điện thoại:</strong> Liên hệ nhanh với khách hàng</li>
                        <li><strong>CMND/CCCD:</strong> Thông tin định danh</li>
                    </ul>
                    <div class="alert alert-warning small mb-0">
                        <i class="fas fa-exclamation-triangle me-1"></i>
                        <strong>Lưu ý:</strong> Email phải là duy nhất trong hệ thống
                    </div>
                </div>
            </div>

            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <i class="fas fa-lightbulb me-2"></i>Gợi ý
                </div>
                <div class="card-body small">
                    <p><strong>Thu thập thông tin đầy đủ giúp:</strong></p>
                    <ul>
                        <li>Liên hệ khách hàng dễ dàng hơn</li>
                        <li>Quản lý booking hiệu quả</li>
                        <li>Áp dụng khuyến mãi cho khách mới</li>
                        <li>Phân loại khách hàng VIP</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
