@model HotelManagementSystem.Models.ViewModels.Promotion.PromotionViewModel

@{
    ViewData["Title"] = "Chỉnh sửa khuyến mãi";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-edit me-2"></i>
            Chỉnh sửa khuyến mãi
        </h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Quay lại
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="CurrentUsageCount" />
                        <input type="hidden" asp-for="CreatedAt" />
                        
                        <!-- Basic Info Section -->
                        <div class="mb-4">
                            <h5 class="border-bottom pb-2 mb-3">
                                <i class="fas fa-info-circle me-2"></i>Thông tin cơ bản
                            </h5>
                            
                            <div class="mb-3">
                                <label asp-for="Code" class="form-label required">
                                    <i class="fas fa-barcode me-2"></i>@Html.DisplayNameFor(m => m.Code)
                                </label>
                                <input asp-for="Code" class="form-control text-uppercase" 
                                       style="text-transform: uppercase;" />
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="Type" class="form-label required">
                                            <i class="fas fa-tag me-2"></i>@Html.DisplayNameFor(m => m.Type)
                                        </label>
                                        <select asp-for="Type" class="form-select" id="typeSelect">
                                            <option value="Percent">Phần trăm (%)</option>
                                            <option value="Amount">Số tiền cố định (VNĐ)</option>
                                        </select>
                                        <span asp-validation-for="Type" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="Value" class="form-label required">
                                            <i class="fas fa-percentage me-2"></i>@Html.DisplayNameFor(m => m.Value)
                                        </label>
                                        <input asp-for="Value" type="number" class="form-control" 
                                               step="0.01" min="0" id="valueInput" />
                                        <span asp-validation-for="Value" class="text-danger"></span>
                                        <small class="text-muted" id="valueHint"></small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Date Range Section -->
                        <div class="mb-4">
                            <h5 class="border-bottom pb-2 mb-3">
                                <i class="fas fa-calendar-alt me-2"></i>Thời gian áp dụng
                            </h5>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="StartDate" class="form-label required">
                                            <i class="fas fa-calendar-check me-2"></i>@Html.DisplayNameFor(m => m.StartDate)
                                        </label>
                                        <input asp-for="StartDate" type="date" class="form-control" />
                                        <span asp-validation-for="StartDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="EndDate" class="form-label required">
                                            <i class="fas fa-calendar-times me-2"></i>@Html.DisplayNameFor(m => m.EndDate)
                                        </label>
                                        <input asp-for="EndDate" type="date" class="form-control" />
                                        <span asp-validation-for="EndDate" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Conditions Section -->
                        <div class="mb-4">
                            <h5 class="border-bottom pb-2 mb-3">
                                <i class="fas fa-cogs me-2"></i>Điều kiện áp dụng
                            </h5>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="MinOrderValue" class="form-label">
                                            <i class="fas fa-shopping-cart me-2"></i>@Html.DisplayNameFor(m => m.MinOrderValue)
                                        </label>
                                        <div class="input-group">
                                            <input asp-for="MinOrderValue" type="number" class="form-control" 
                                                   step="1000" min="0" />
                                            <span class="input-group-text">VNĐ</span>
                                        </div>
                                        <span asp-validation-for="MinOrderValue" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6" id="maxDiscountDiv">
                                    <div class="mb-3">
                                        <label asp-for="MaxDiscountAmount" class="form-label">
                                            <i class="fas fa-hand-holding-usd me-2"></i>@Html.DisplayNameFor(m => m.MaxDiscountAmount)
                                        </label>
                                        <div class="input-group">
                                            <input asp-for="MaxDiscountAmount" type="number" class="form-control" 
                                                   step="1000" min="0" />
                                            <span class="input-group-text">VNĐ</span>
                                        </div>
                                        <span asp-validation-for="MaxDiscountAmount" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="MaxUsageCount" class="form-label">
                                            <i class="fas fa-hashtag me-2"></i>@Html.DisplayNameFor(m => m.MaxUsageCount)
                                        </label>
                                        <input asp-for="MaxUsageCount" type="number" class="form-control" min="1" />
                                        <span asp-validation-for="MaxUsageCount" class="text-danger"></span>
                                        <small class="text-muted">Hiện tại đã dùng: @Model.CurrentUsageCount lần</small>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">&nbsp;</label>
                                        <div class="form-check">
                                            <input asp-for="IsNewCustomerOnly" class="form-check-input" type="checkbox" />
                                            <label class="form-check-label" asp-for="IsNewCustomerOnly">
                                                <i class="fas fa-user-plus me-2"></i>@Html.DisplayNameFor(m => m.IsNewCustomerOnly)
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Lưu thay đổi
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Info Panel -->
        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <i class="fas fa-info-circle me-2"></i>Thông tin
                </div>
                <div class="card-body">
                    <p class="mb-2"><strong>ID:</strong> @Model.Id</p>
                    <p class="mb-2"><strong>Mã:</strong> @Model.Code</p>
                    <p class="mb-2"><strong>Tạo lúc:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                    <span class="badge @Model.StatusBadgeClass">
                        @Model.StatusDisplay
                    </span>
                </div>
            </div>

            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <i class="fas fa-exclamation-triangle me-2"></i>Lưu ý
                </div>
                <div class="card-body small">
                    <ul>
                        <li>Thay đổi mã có thể ảnh hưởng đến người dùng đang sử dụng</li>
                        <li>Nếu thay đổi loại (% sang VNĐ), hãy điều chỉnh giá trị phù hợp</li>
                        <li>Số lần đã sử dụng không thể reset</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            function updateValueInput() {
                var type = $('#typeSelect').val();
                if (type === 'Percent') {
                    $('#valueInput').attr('max', '100');
                    $('#valueHint').text('Nhập giá trị phần trăm (0-100)');
                    $('#maxDiscountDiv').show();
                } else {
                    $('#valueInput').removeAttr('max');
                    $('#valueHint').text('Nhập số tiền cố định (VNĐ)');
                    $('#maxDiscountDiv').hide();
                }
            }

            $('#typeSelect').change(updateValueInput);
            updateValueInput();

            $('#Code').on('input', function() {
                $(this).val($(this).val().toUpperCase());
            });
        });
    </script>
}
