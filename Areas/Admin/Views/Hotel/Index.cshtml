@model List<HotelManagementSystem.Models.ViewModels.Hotel.HotelViewModel>

@{
    ViewData["Title"] = "Quản lý khách sạn";
}

<div class="container-fluid mt-4">
    <!-- PAGE HEADER -->
    <div class="page-header mb-4">
        <div>
            <h1 class="page-title">
                <i class="fas fa-hotel me-2 text-primary"></i>
                Quản lý khách sạn
            </h1>
            <p class="text-muted mb-0">Quản lý thông tin các khách sạn trong hệ thống</p>
        </div>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="fas fa-plus me-2"></i>
                Thêm khách sạn mới
            </a>
        }
    </div>

    <!-- SUCCESS MESSAGE -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- CONTENT -->
    @if (Model == null || !Model.Any())
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="fas fa-inbox fa-4x text-muted mb-3" style="opacity: 0.3;"></i>
                <p class="text-muted fs-5 mb-3">Chưa có khách sạn nào trong hệ thống</p>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>
                        Thêm khách sạn mới
                    </a>
                }
            </div>
        </div>
    }
    else
    {
        <!-- STATISTICS ROW -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="stat-card primary">
                    <div class="stat-icon">
                        <i class="fas fa-building"></i>
                    </div>
                    <div class="stat-value">@Model.Count</div>
                    <div class="stat-label">Tổng khách sạn</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card success">
                    <div class="stat-icon">
                        <i class="fas fa-door-open"></i>
                    </div>
                    <div class="stat-value">@Model.Sum(h => h.TotalRooms)</div>
                    <div class="stat-label">Tổng phòng</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card info">
                    <div class="stat-icon">
                        <i class="fas fa-bed"></i>
                    </div>
                    <div class="stat-value">@Model.Sum(h => h.RoomTypeCount)</div>
                    <div class="stat-label">Loại phòng</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card warning">
                    <div class="stat-icon">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                    <div class="stat-value">@Model.Sum(h => h.TotalBookings)</div>
                    <div class="stat-label">Tổng booking</div>
                </div>
            </div>
        </div>

        <!-- HOTELS GRID -->
        <div class="row">
            @foreach (var hotel in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm transition">
                        <!-- CARD HEADER -->
                        <div class="card-header bg-gradient-primary text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-building me-2"></i>
                                @hotel.Name
                            </h5>
                        </div>

                        <!-- CARD BODY -->
                        <div class="card-body">
                            <!-- ADDRESS -->
                            <div class="mb-3 pb-3 border-bottom">
                                <p class="mb-0">
                                    <i class="fas fa-map-marker-alt text-danger me-2"></i>
                                    <strong>Địa chỉ:</strong>
                                </p>
                                <p class="ms-4 mb-0 text-muted">
                                    @(hotel.Address ?? "Chưa cập nhật")
                                </p>
                            </div>

                            <!-- TIMEZONE -->
                            <div class="mb-3 pb-3 border-bottom">
                                <p class="mb-0">
                                    <i class="fas fa-globe text-info me-2"></i>
                                    <strong>Múi giờ:</strong> @hotel.Timezone
                                </p>
                            </div>

                            <!-- STATISTICS -->
                            <div class="row text-center">
                                <div class="col-4">
                                    <div class="stat-mini">
                                        <div class="text-primary">
                                            <h5 class="mb-0">@hotel.RoomTypeCount</h5>
                                            <small class="text-muted">Loại phòng</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="stat-mini">
                                        <div class="text-success">
                                            <h5 class="mb-0">@hotel.TotalRooms</h5>
                                            <small class="text-muted">Phòng</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="stat-mini">
                                        <div class="text-info">
                                            <h5 class="mb-0">@hotel.TotalBookings</h5>
                                            <small class="text-muted">Booking</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- CARD FOOTER -->
                        <div class="card-footer bg-light">
                            <div class="btn-group w-100 gap-1" role="group">
                                <a asp-action="Details" asp-route-id="@hotel.Id" 
                                   class="btn btn-sm btn-info text-white" 
                                   title="Chi tiết">
                                    <i class="fas fa-eye me-1"></i>Chi tiết
                                </a>
                                <a asp-action="Edit" asp-route-id="@hotel.Id" 
                                   class="btn btn-sm btn-warning text-white" 
                                   title="Sửa">
                                    <i class="fas fa-edit me-1"></i>Sửa
                                </a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Delete" asp-route-id="@hotel.Id" 
                                       class="btn btn-sm btn-danger" 
                                       title="Xóa">
                                        <i class="fas fa-trash me-1"></i>Xóa
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .stat-mini {
        padding: 1rem;
        border-radius: 8px;
        background: #f8f9fa;
    }

    .transition {
        transition: all 0.3s ease;
    }

    .card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 32px rgba(0, 0, 0, 0.15) !important;
    }

    .card-header {
        border: none;
        padding: 1.25rem;
    }

    .btn-group .btn {
        margin: 0 2px;
    }
</style>
