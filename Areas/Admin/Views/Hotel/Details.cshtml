@model HotelManagementSystem.Models.ViewModels.Hotel.HotelViewModel

@{
    ViewData["Title"] = "Chi tiết khách sạn";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Chi tiết khách sạn
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5 class="text-primary mb-3">
                                <i class="fas fa-building me-2"></i>
                                Thông tin cơ bản
                            </h5>
                            <dl class="row">
                                <dt class="col-sm-4">Tên khách sạn:</dt>
                                <dd class="col-sm-8"><strong>@Model.Name</strong></dd>

                                <dt class="col-sm-4">Địa chỉ:</dt>
                                <dd class="col-sm-8">@(Model.Address ?? "Chưa cập nhật")</dd>

                                <dt class="col-sm-4">Múi giờ:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-secondary">@Model.Timezone</span>
                                </dd>

                                <dt class="col-sm-4">Ngày tạo:</dt>
                                <dd class="col-sm-8">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
                            </dl>
                        </div>

                        <div class="col-md-6">
                            <h5 class="text-success mb-3">
                                <i class="fas fa-chart-bar me-2"></i>
                                Thống kê
                            </h5>
                            <div class="row text-center">
                                <div class="col-4">
                                    <div class="card bg-primary text-white mb-3">
                                        <div class="card-body">
                                            <h2>@Model.RoomTypeCount</h2>
                                            <p class="mb-0">Loại phòng</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="card bg-success text-white mb-3">
                                        <div class="card-body">
                                            <h2>@Model.TotalRooms</h2>
                                            <p class="mb-0">Phòng</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="card bg-info text-white mb-3">
                                        <div class="card-body">
                                            <h2>@Model.TotalBookings</h2>
                                            <p class="mb-0">Booking</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit me-2"></i>
                            Chỉnh sửa
                        </a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                <i class="fas fa-trash me-2"></i>
                                Xóa
                            </a>
                        }
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>
                            Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
