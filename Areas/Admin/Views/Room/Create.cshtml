@model HotelManagementSystem.Models.Entities.Room

@{
    ViewData["Title"] = "Tạo Phòng Mới";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-door-open"></i> Tạo Phòng Mới
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-area="Admin" asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="HotelId" class="form-label">
                                    <i class="fas fa-hotel"></i> Khách Sạn <span class="text-danger">*</span>
                                </label>
                                <select asp-for="HotelId" class="form-select" asp-items="@ViewBag.Hotels">
                                    <option value="">-- Chọn khách sạn --</option>
                                </select>
                                <span asp-validation-for="HotelId" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="RoomTypeId" class="form-label">
                                    <i class="fas fa-bed"></i> Loại Phòng <span class="text-danger">*</span>
                                </label>
                                <select asp-for="RoomTypeId" class="form-select" asp-items="@ViewBag.RoomTypes">
                                    <option value="">-- Chọn loại phòng --</option>
                                </select>
                                <span asp-validation-for="RoomTypeId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Number" class="form-label">
                                    <i class="fas fa-hashtag"></i> Số Phòng <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Number" class="form-control" placeholder="Ví dụ: 101" />
                                <span asp-validation-for="Number" class="text-danger"></span>
                                <small class="form-text text-muted">Số phòng phải là duy nhất trong khách sạn</small>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Floor" class="form-label">
                                    <i class="fas fa-layer-group"></i> Tầng
                                </label>
                                <input asp-for="Floor" type="number" class="form-control" placeholder="Ví dụ: 1" min="0" />
                                <span asp-validation-for="Floor" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Status" class="form-label">
                                <i class="fas fa-info-circle"></i> Trạng Thái <span class="text-danger">*</span>
                            </label>
                            <select asp-for="Status" class="form-select" asp-items="@ViewBag.StatusList">
                                <option value="">-- Chọn trạng thái --</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label">
                                <i class="fas fa-image"></i> Hình Ảnh (URL)
                            </label>
                            <input asp-for="ImageUrl" class="form-control" placeholder="https://example.com/room-image.jpg" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            <small class="form-text text-muted">Nhập URL hình ảnh của phòng. Để trống sẽ dùng hình mặc định từ Loại phòng.</small>
                        </div>

                        <div class="alert alert-info" role="alert">
                            <i class="fas fa-lightbulb"></i> <strong>Lưu ý:</strong>
                            <ul class="mb-0 mt-2">
                                <li><strong>Vacant:</strong> Phòng trống, sẵn sàng cho thuê</li>
                                <li><strong>Occupied:</strong> Phòng đang có khách</li>
                                <li><strong>Maintenance:</strong> Phòng đang bảo trì</li>
                                <li><strong>OutOfOrder:</strong> Phòng hỏng, không thể sử dụng</li>
                            </ul>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i> Hủy
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Tạo Phòng
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
