@model HotelManagementSystem.Models.ViewModels.Payment.PaymentViewModel
@{
    ViewData["Title"] = $"Chi tiết Payment {Model.PaymentCode}";
    var booking = ViewBag.Booking as HotelManagementSystem.Models.ViewModels.Booking.BookingViewModel;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-money-bill-wave"></i> Chi tiết Payment</h2>
        <div>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
            @if (booking != null)
            {
                <a asp-controller="Booking" asp-action="Details" asp-route-id="@Model.BookingId" class="btn btn-info">
                    <i class="fas fa-calendar-check"></i> Xem Booking
                </a>
            }
        </div>
    </div>

    <!-- Alert Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <!-- Payment Info Card -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-info-circle"></i> Thông tin Payment</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Mã payment:</strong> @Model.PaymentCode
                        </div>
                        <div class="col-md-6">
                            <strong>Ngày tạo:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Phương thức:</strong>
                            <span class="badge @Model.MethodBadgeClass">@Model.MethodDisplay</span>
                        </div>
                        <div class="col-md-6">
                            <strong>Trạng thái:</strong>
                            <span class="badge @Model.StatusBadgeClass">@Model.StatusDisplay</span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <strong>Số tiền:</strong>
                            <h3 class="text-primary mb-0">@Model.Amount.ToString("N0") đ</h3>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.TxnCode))
                    {
                        <div class="alert alert-info">
                            <strong>Mã giao dịch:</strong> @Model.TxnCode
                        </div>
                    }
                </div>
            </div>

            <!-- Booking Info Card -->
            @if (booking != null)
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-calendar-check"></i> Thông tin Booking</h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-2">
                            <div class="col-md-4"><strong>Mã booking:</strong></div>
                            <div class="col-md-8">
                                <a asp-controller="Booking" asp-action="Details" asp-route-id="@booking.Id">
                                    @booking.BookingCode
                                </a>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-4"><strong>Khách hàng:</strong></div>
                            <div class="col-md-8">@booking.GuestName</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-4"><strong>Phòng:</strong></div>
                            <div class="col-md-8">@booking.RoomNumber - @booking.RoomTypeName</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-4"><strong>Check-in:</strong></div>
                            <div class="col-md-8">@booking.CheckInDate.ToString("dd/MM/yyyy")</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-4"><strong>Check-out:</strong></div>
                            <div class="col-md-8">@booking.CheckOutDate.ToString("dd/MM/yyyy")</div>
                        </div>
                        <div class="row">
                            <div class="col-md-4"><strong>Tổng tiền booking:</strong></div>
                            <div class="col-md-8"><strong class="text-primary">@booking.FinalAmount.ToString("N0") đ</strong></div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Action Panel -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-cogs"></i> Thao tác</h5>
                </div>
                <div class="card-body">
                    @if (Model.Status == "Unpaid")
                    {
                        @if (Model.Method == "Mock")
                        {
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle"></i> Thanh toán giả lập sẽ được xử lý tự động
                            </div>
                            <form asp-action="ProcessMock" method="post" onsubmit="return confirm('Xác nhận xử lý thanh toán giả lập?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@Model.Id" />
                                <button type="submit" class="btn btn-success w-100 mb-2">
                                    <i class="fas fa-check-circle"></i> Xử lý thanh toán Mock
                                </button>
                            </form>
                        }
                        else if (Model.Method == "PayAtProperty")
                        {
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle"></i> Khách hàng sẽ thanh toán tại khách sạn
                            </div>
                            <form asp-action="ProcessPayAtProperty" method="post" onsubmit="return confirm('Xác nhận khách đã thanh toán tại khách sạn?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@Model.Id" />
                                <button type="submit" class="btn btn-success w-100 mb-2">
                                    <i class="fas fa-hand-holding-usd"></i> Xác nhận đã thanh toán
                                </button>
                            </form>
                        }

                        <form asp-action="MarkFailed" method="post" onsubmit="return confirm('Đánh dấu payment này thất bại?');">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="fas fa-times-circle"></i> Đánh dấu thất bại
                            </button>
                        </form>
                    }
                    else if (Model.CanRefund)
                    {
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle"></i> Payment đã thanh toán thành công
                        </div>
                        <a asp-action="Refund" asp-route-id="@Model.Id" class="btn btn-warning w-100">
                            <i class="fas fa-undo"></i> Hoàn tiền
                        </a>
                    }
                    else if (Model.IsRefunded)
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> Payment đã được hoàn tiền
                        </div>
                    }
                    else if (Model.IsFailed)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-times-circle"></i> Payment đã thất bại
                        </div>
                    }
                </div>
            </div>

            @if (Model.Method == "Mock" && Model.Status == "Unpaid")
            {
                <div class="card mt-3">
                    <div class="card-header bg-info text-white">
                        <h6 class="mb-0"><i class="fas fa-question-circle"></i> Thanh toán Mock</h6>
                    </div>
                    <div class="card-body">
                        <p class="small mb-0">
                            Thanh toán giả lập (Mock) sẽ luôn thành công để thuận tiện cho việc kiểm thử.
                            Hệ thống sẽ tự động tạo mã giao dịch và cập nhật trạng thái.
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
