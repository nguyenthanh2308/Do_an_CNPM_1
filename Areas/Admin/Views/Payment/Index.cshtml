@model List<HotelManagementSystem.Models.ViewModels.Payment.PaymentViewModel>
@{
    ViewData["Title"] = "Quản lý Thanh toán";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-money-bill-wave"></i> Quản lý Thanh toán</h2>
    </div>

    <!-- Alert Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="stat-card primary">
                <div class="stat-icon">
                    <i class="fas fa-money-bill-wave"></i>
                </div>
                <div class="stat-value">@ViewBag.TotalPayments</div>
                <div class="stat-label">Tổng số payment</div>
                <small class="text-white-50">@(((decimal)ViewBag.TotalAmount).ToString("N0")) đ</small>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="stat-card success">
                <div class="stat-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="stat-value">@ViewBag.PaidCount</div>
                <div class="stat-label">Đã thanh toán</div>
                <small class="text-white-50">@(((decimal)ViewBag.PaidAmount).ToString("N0")) đ</small>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="stat-card warning">
                <div class="stat-icon">
                    <i class="fas fa-clock"></i>
                </div>
                <div class="stat-value">@ViewBag.UnpaidCount</div>
                <div class="stat-label">Chưa thanh toán</div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="stat-card info">
                <div class="stat-icon">
                    <i class="fas fa-undo"></i>
                </div>
                <div class="stat-value">@ViewBag.RefundedCount</div>
                <div class="stat-label">Đã hoàn tiền</div>
                <small class="text-white-50">@(((decimal)ViewBag.RefundedAmount).ToString("N0")) đ</small>
            </div>
        </div>
    </div>

    <!-- Filter Panel -->
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-filter"></i> Bộ lọc
        </div>
        <div class="card-body">
            <form method="get" asp-action="Index">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Trạng thái</label>
                        <select name="status" class="form-select">
                            <option value="">-- Tất cả --</option>
                            <option value="Unpaid" selected="@(ViewBag.Status == "Unpaid")">Chưa thanh toán</option>
                            <option value="Paid" selected="@(ViewBag.Status == "Paid")">Đã thanh toán</option>
                            <option value="Refunded" selected="@(ViewBag.Status == "Refunded")">Đã hoàn tiền</option>
                            <option value="Failed" selected="@(ViewBag.Status == "Failed")">Thất bại</option>
                        </select>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Phương thức</label>
                        <select name="method" class="form-select">
                            <option value="">-- Tất cả --</option>
                            <option value="Mock" selected="@(ViewBag.Method == "Mock")">Thanh toán giả lập</option>
                            <option value="PayAtProperty" selected="@(ViewBag.Method == "PayAtProperty")">Thanh toán tại khách sạn</option>
                        </select>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">&nbsp;</label>
                        <div>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i> Lọc
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-redo"></i> Đặt lại
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Payments Table -->
    <div class="card">
        <div class="card-header">
            <i class="fas fa-list"></i> Danh sách Payment (@Model.Count)
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Mã payment</th>
                                <th>Booking</th>
                                <th>Khách hàng</th>
                                <th>Phòng</th>
                                <th>Phương thức</th>
                                <th>Số tiền</th>
                                <th>Mã GD</th>
                                <th>Trạng thái</th>
                                <th>Ngày tạo</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var payment in Model)
                            {
                                <tr>
                                    <td><strong>@payment.PaymentCode</strong></td>
                                    <td>
                                        <a asp-controller="Booking" asp-action="Details" asp-route-id="@payment.BookingId">
                                            @payment.BookingCode
                                        </a>
                                    </td>
                                    <td>@payment.GuestName</td>
                                    <td>@payment.RoomNumber</td>
                                    <td>
                                        <span class="badge @payment.MethodBadgeClass">
                                            @payment.MethodDisplay
                                        </span>
                                    </td>
                                    <td><strong>@payment.Amount.ToString("N0") đ</strong></td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(payment.TxnCode))
                                        {
                                            <small class="text-muted">@payment.TxnCode</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge @payment.StatusBadgeClass">
                                            @payment.StatusDisplay
                                        </span>
                                    </td>
                                    <td>@payment.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@payment.Id" class="btn btn-sm btn-info" title="Chi tiết">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (payment.Status == "Unpaid" && payment.Method == "Mock")
                                            {
                                                <form asp-action="ProcessMock" method="post" style="display:inline;">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@payment.Id" />
                                                    <button type="submit" class="btn btn-sm btn-success" title="Xử lý thanh toán">
                                                        <i class="fas fa-check"></i>
                                                    </button>
                                                </form>
                                            }
                                            @if (payment.CanRefund)
                                            {
                                                <a asp-action="Refund" asp-route-id="@payment.Id" class="btn btn-sm btn-warning" title="Hoàn tiền">
                                                    <i class="fas fa-undo"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <p class="text-muted">Không có payment nào</p>
                </div>
            }
        </div>
    </div>
</div>
