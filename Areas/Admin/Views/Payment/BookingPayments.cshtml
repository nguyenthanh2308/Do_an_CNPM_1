@model List<HotelManagementSystem.Models.ViewModels.Payment.PaymentViewModel>
@{
    ViewData["Title"] = "Payments của Booking";
    var booking = ViewBag.Booking as HotelManagementSystem.Models.ViewModels.Booking.BookingViewModel;
    var totalPaid = (decimal)ViewBag.TotalPaid;
    var remainingAmount = (decimal)ViewBag.RemainingAmount;
    
    if (booking == null)
    {
        return;
    }
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-money-bill-wave"></i> Payments của Booking</h2>
        <div>
            <a asp-controller="Booking" asp-action="Details" asp-route-id="@booking.Id" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại Booking
            </a>
            @if (remainingAmount > 0)
            {
                <a asp-action="Create" asp-route-bookingId="@booking.Id" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Tạo Payment mới
                </a>
            }
        </div>
    </div>

    <!-- Booking Summary -->
    <div class="card mb-4">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0"><i class="fas fa-calendar-check"></i> Thông tin Booking</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <strong>Mã booking:</strong> @booking.BookingCode
                </div>
                <div class="col-md-3">
                    <strong>Khách hàng:</strong> @booking.GuestName
                </div>
                <div class="col-md-3">
                    <strong>Phòng:</strong> @booking.RoomNumber
                </div>
                <div class="col-md-3">
                    <strong>Trạng thái:</strong>
                    <span class="badge @booking.StatusBadgeClass">@booking.StatusDisplay</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Payment Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <h3 class="text-primary">@booking.FinalAmount.ToString("N0") đ</h3>
                    <p class="mb-0">Tổng tiền booking</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-success">
                <div class="card-body text-center">
                    <h3 class="text-success">@totalPaid.ToString("N0") đ</h3>
                    <p class="mb-0">Đã thanh toán</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-@(remainingAmount > 0 ? "danger" : "secondary")">
                <div class="card-body text-center">
                    <h3 class="text-@(remainingAmount > 0 ? "danger" : "secondary")">@remainingAmount.ToString("N0") đ</h3>
                    <p class="mb-0">Còn lại</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Payment Status Alert -->
    @if (remainingAmount > 0)
    {
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle"></i> <strong>Chưa thanh toán đầy đủ!</strong>
            Booking này còn thiếu <strong>@remainingAmount.ToString("N0") đ</strong>.
            <a asp-action="Create" asp-route-bookingId="@booking.Id" class="alert-link">Tạo payment mới</a>
        </div>
    }
    else
    {
        <div class="alert alert-success">
            <i class="fas fa-check-circle"></i> <strong>Đã thanh toán đầy đủ!</strong>
            Booking này đã được thanh toán toàn bộ.
        </div>
    }

    <!-- Payments List -->
    <div class="card">
        <div class="card-header">
            <i class="fas fa-list"></i> Danh sách Payment (@Model.Count)
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Mã payment</th>
                                <th>Phương thức</th>
                                <th>Số tiền</th>
                                <th>Mã giao dịch</th>
                                <th>Trạng thái</th>
                                <th>Ngày tạo</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var payment in Model)
                            {
                                <tr>
                                    <td><strong>@payment.PaymentCode</strong></td>
                                    <td>
                                        <span class="badge @payment.MethodBadgeClass">
                                            @payment.MethodDisplay
                                        </span>
                                    </td>
                                    <td><strong>@payment.Amount.ToString("N0") đ</strong></td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(payment.TxnCode))
                                        {
                                            <small class="text-muted">@payment.TxnCode</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge @payment.StatusBadgeClass">
                                            @payment.StatusDisplay
                                        </span>
                                    </td>
                                    <td>@payment.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@payment.Id" class="btn btn-sm btn-info" title="Chi tiết">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (payment.Status == "Unpaid" && payment.Method == "Mock")
                                            {
                                                <form asp-action="ProcessMock" method="post" style="display:inline;">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@payment.Id" />
                                                    <button type="submit" class="btn btn-sm btn-success" title="Xử lý">
                                                        <i class="fas fa-check"></i>
                                                    </button>
                                                </form>
                                            }
                                            @if (payment.Status == "Unpaid" && payment.Method == "PayAtProperty")
                                            {
                                                <form asp-action="ProcessPayAtProperty" method="post" style="display:inline;">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@payment.Id" />
                                                    <button type="submit" class="btn btn-sm btn-success" title="Xác nhận">
                                                        <i class="fas fa-hand-holding-usd"></i>
                                                    </button>
                                                </form>
                                            }
                                            @if (payment.CanRefund)
                                            {
                                                <a asp-action="Refund" asp-route-id="@payment.Id" class="btn btn-sm btn-warning" title="Hoàn tiền">
                                                    <i class="fas fa-undo"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <p class="text-muted">Chưa có payment nào</p>
                    <a asp-action="Create" asp-route-bookingId="@booking.Id" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Tạo Payment đầu tiên
                    </a>
                </div>
            }
        </div>
    </div>
</div>
