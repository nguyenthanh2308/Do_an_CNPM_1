@model HotelManagementSystem.Models.ViewModels.Report.BookingStatusReportViewModel
@{
    ViewData["Title"] = "Báo cáo Trạng thái Booking";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-clipboard-list"></i> Báo cáo Trạng thái Booking</h2>
        <a asp-action="Dashboard" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Về Dashboard
        </a>
    </div>

    <!-- Filter -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-5">
                    <label class="form-label">Từ ngày</label>
                    <input type="date" name="fromDate" class="form-control" 
                           value="@Model.FromDate.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-5">
                    <label class="form-label">Đến ngày</label>
                    <input type="date" name="toDate" class="form-control" 
                           value="@Model.ToDate.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i> Tìm kiếm
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Summary -->
    <div class="row mb-4">
        <div class="col-md-2">
            <div class="card bg-secondary text-white">
                <div class="card-body text-center">
                    <h6 class="card-title">Tổng booking</h6>
                    <h3>@Model.TotalBookings</h3>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-warning text-white">
                <div class="card-body text-center">
                    <h6 class="card-title">Pending</h6>
                    <h3>@Model.PendingBookings</h3>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <h6 class="card-title">Confirmed</h6>
                    <h3>@Model.ConfirmedBookings</h3>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h6 class="card-title">Checked In</h6>
                    <h3>@Model.CheckedInBookings</h3>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h6 class="card-title">Checked Out</h6>
                    <h3>@Model.CheckedOutBookings</h3>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-danger text-white">
                <div class="card-body text-center">
                    <h6 class="card-title">Cancelled</h6>
                    <h3>@Model.CancelledBookings</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Rates -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5><i class="fas fa-check-circle"></i> Tỷ lệ xác nhận thành công</h5>
                    <div class="progress" style="height: 30px;">
                        <div class="progress-bar bg-success" role="progressbar" 
                             style="width: @Model.ConfirmationRate%" 
                             aria-valuenow="@Model.ConfirmationRate" aria-valuemin="0" aria-valuemax="100">
                            @Model.ConfirmationRate.ToString("N1")%
                        </div>
                    </div>
                    <p class="mt-2 mb-0">@Model.ConfirmedBookings + @Model.CheckedInBookings + @Model.CheckedOutBookings / @Model.TotalBookings booking</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5><i class="fas fa-times-circle"></i> Tỷ lệ hủy</h5>
                    <div class="progress" style="height: 30px;">
                        <div class="progress-bar bg-danger" role="progressbar" 
                             style="width: @Model.CancellationRate%" 
                             aria-valuenow="@Model.CancellationRate" aria-valuemin="0" aria-valuemax="100">
                            @Model.CancellationRate.ToString("N1")%
                        </div>
                    </div>
                    <p class="mt-2 mb-0">@Model.CancelledBookings / @Model.TotalBookings booking</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts -->
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-chart-pie"></i> Biểu đồ tròn - Phân bổ trạng thái</h5>
                </div>
                <div class="card-body">
                    <canvas id="pieChart" style="height: 300px;"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-chart-bar"></i> Biểu đồ cột - Số lượng</h5>
                </div>
                <div class="card-body">
                    <canvas id="barChart" style="height: 300px;"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Data Table -->
    <div class="card">
        <div class="card-header">
            <h5><i class="fas fa-table"></i> Chi tiết trạng thái</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Trạng thái</th>
                            <th class="text-center">Số lượng</th>
                            <th class="text-end">Tỷ lệ (%)</th>
                            <th>Biểu đồ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.StatusBreakdown)
                        {
                            var badgeClass = item.Status == "CheckedOut" ? "bg-success" :
                                           item.Status == "CheckedIn" ? "bg-primary" :
                                           item.Status == "Confirmed" ? "bg-info" :
                                           item.Status == "Pending" ? "bg-warning" : "bg-danger";
                            var statusName = item.Status == "Pending" ? "Chờ xác nhận" :
                                           item.Status == "Confirmed" ? "Đã xác nhận" :
                                           item.Status == "CheckedIn" ? "Đã nhận phòng" :
                                           item.Status == "CheckedOut" ? "Đã trả phòng" : "Đã hủy";
                            <tr>
                                <td>
                                    <span class="badge @badgeClass">@statusName</span>
                                </td>
                                <td class="text-center">@item.Count</td>
                                <td class="text-end">@item.Percentage.ToString("N1")%</td>
                                <td>
                                    <div class="progress" style="height: 20px;">
                                        <div class="progress-bar @badgeClass.Replace("bg-", "bg-")" 
                                             role="progressbar" style="width: @item.Percentage%"
                                             aria-valuenow="@item.Percentage" aria-valuemin="0" aria-valuemax="100">
                                            @if (item.Percentage > 10)
                                            {
                                                <span>@item.Percentage.ToString("N1")%</span>
                                            }
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        // Pie Chart
        const pieCtx = document.getElementById('pieChart').getContext('2d');
        const pieChart = new Chart(pieCtx, {
            type: 'pie',
            data: {
                labels: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.StatusBreakdown.Select(s => 
                    s.Status == "Pending" ? "Chờ xác nhận" :
                    s.Status == "Confirmed" ? "Đã xác nhận" :
                    s.Status == "CheckedIn" ? "Đã nhận phòng" :
                    s.Status == "CheckedOut" ? "Đã trả phòng" : "Đã hủy"
                ))),
                datasets: [{
                    data: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.StatusBreakdown.Select(s => s.Count))),
                    backgroundColor: [
                        'rgba(255, 205, 86, 0.7)',  // Pending
                        'rgba(54, 162, 235, 0.7)',  // Confirmed
                        'rgba(75, 85, 192, 0.7)',   // CheckedIn
                        'rgba(75, 192, 192, 0.7)',  // CheckedOut
                        'rgba(255, 99, 132, 0.7)'   // Cancelled
                    ],
                    borderColor: [
                        'rgb(255, 205, 86)',
                        'rgb(54, 162, 235)',
                        'rgb(75, 85, 192)',
                        'rgb(75, 192, 192)',
                        'rgb(255, 99, 132)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: true, position: 'right' },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                const label = context.label || '';
                                const value = context.parsed;
                                const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                const percentage = ((value / total) * 100).toFixed(1);
                                return label + ': ' + value + ' (' + percentage + '%)';
                            }
                        }
                    }
                }
            }
        });

        // Bar Chart
        const barCtx = document.getElementById('barChart').getContext('2d');
        const barChart = new Chart(barCtx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.StatusBreakdown.Select(s => 
                    s.Status == "Pending" ? "Pending" :
                    s.Status == "Confirmed" ? "Confirmed" :
                    s.Status == "CheckedIn" ? "CheckedIn" :
                    s.Status == "CheckedOut" ? "CheckedOut" : "Cancelled"
                ))),
                datasets: [{
                    label: 'Số lượng booking',
                    data: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.StatusBreakdown.Select(s => s.Count))),
                    backgroundColor: [
                        'rgba(255, 205, 86, 0.7)',
                        'rgba(54, 162, 235, 0.7)',
                        'rgba(75, 85, 192, 0.7)',
                        'rgba(75, 192, 192, 0.7)',
                        'rgba(255, 99, 132, 0.7)'
                    ],
                    borderColor: [
                        'rgb(255, 205, 86)',
                        'rgb(54, 162, 235)',
                        'rgb(75, 85, 192)',
                        'rgb(75, 192, 192)',
                        'rgb(255, 99, 132)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: { stepSize: 1 }
                    }
                }
            }
        });
    </script>
}
