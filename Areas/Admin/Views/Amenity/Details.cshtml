@model HotelManagementSystem.Models.ViewModels.Amenity.AmenityViewModel

@{
    ViewData["Title"] = "Chi tiết tiện nghi";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Chi tiết tiện nghi
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <div class="text-center mb-4">
                                <div class="display-4 text-primary">
                                    <i class="fas fa-star"></i>
                                </div>
                                <h2 class="mt-3">@Model.Name</h2>
                            </div>

                            <hr class="my-4"/>

                            <dl class="row">
                                <dt class="col-sm-4">
                                    <i class="fas fa-fingerprint me-2"></i>
                                    ID:
                                </dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-secondary">@Model.Id</span>
                                </dd>

                                <dt class="col-sm-4">
                                    <i class="fas fa-tag me-2"></i>
                                    Tên tiện nghi:
                                </dt>
                                <dd class="col-sm-8">
                                    <strong>@Model.Name</strong>
                                </dd>

                                <dt class="col-sm-4">
                                    <i class="fas fa-chart-bar me-2"></i>
                                    Số loại phòng sử dụng:
                                </dt>
                                <dd class="col-sm-8">
                                    @if (Model.UsageCount > 0)
                                    {
                                        <span class="badge bg-success fs-5">@Model.UsageCount loại phòng</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Chưa được sử dụng</span>
                                    }
                                </dd>
                            </dl>

                            @if (Model.UsageCount > 0)
                            {
                                <div class="alert alert-info mt-4" role="alert">
                                    <i class="fas fa-info-circle me-2"></i>
                                    <strong>Thông tin:</strong> Tiện nghi này đang được sử dụng bởi các loại phòng. 
                                    Xem danh sách loại phòng trong phần <a asp-area="Admin" asp-controller="RoomType" asp-action="Index" class="alert-link">Quản lý loại phòng</a>.
                                </div>
                            }
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit me-2"></i>
                            Chỉnh sửa
                        </a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                <i class="fas fa-trash me-2"></i>
                                Xóa
                            </a>
                        }
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>
                            Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
