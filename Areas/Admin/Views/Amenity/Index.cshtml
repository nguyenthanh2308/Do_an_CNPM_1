@model List<HotelManagementSystem.Models.ViewModels.Amenity.AmenityViewModel>

@{
    ViewData["Title"] = "Quản lý tiện nghi";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-star me-2"></i>
            Quản lý tiện nghi
        </h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>
            Thêm tiện nghi mới
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Stats -->
    @if (Model != null && Model.Any())
    {
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="stat-card primary">
                    <div class="stat-icon">
                        <i class="fas fa-star"></i>
                    </div>
                    <div class="stat-value">@Model.Count</div>
                    <div class="stat-label">Tổng tiện nghi</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card success">
                    <div class="stat-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="stat-value">@Model.Count(a => a.UsageCount > 0)</div>
                    <div class="stat-label">Đang được sử dụng</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card info">
                    <div class="stat-icon">
                        <i class="fas fa-chart-bar"></i>
                    </div>
                    <div class="stat-value">@Model.Sum(a => a.UsageCount)</div>
                    <div class="stat-label">Tổng lượt sử dụng</div>
                </div>
            </div>
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>
            Chưa có tiện nghi nào trong hệ thống.
        </div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 5%">#</th>
                                <th style="width: 50%">
                                    <i class="fas fa-tag me-2"></i>Tên tiện nghi
                                </th>
                                <th style="width: 20%" class="text-center">
                                    <i class="fas fa-chart-bar me-2"></i>Số loại phòng sử dụng
                                </th>
                                <th style="width: 25%" class="text-end">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                var amenity = Model[i];
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>
                                        <strong>@amenity.Name</strong>
                                    </td>
                                    <td class="text-center">
                                        @if (amenity.UsageCount > 0)
                                        {
                                            <span class="badge bg-success">@amenity.UsageCount</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">0</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@amenity.Id" 
                                               class="btn btn-sm btn-outline-info"
                                               title="Chi tiết">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@amenity.Id" 
                                               class="btn btn-sm btn-outline-warning"
                                               title="Chỉnh sửa">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            @if (User.IsInRole("Admin"))
                                            {
                                                <a asp-action="Delete" asp-route-id="@amenity.Id" 
                                                   class="btn btn-sm btn-outline-danger"
                                                   title="Xóa">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer text-muted">
                <i class="fas fa-info-circle me-2"></i>
                Tổng số: <strong>@Model.Count</strong> tiện nghi
            </div>
        </div>
    }
</div>
