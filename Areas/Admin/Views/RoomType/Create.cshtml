@model HotelManagementSystem.Models.ViewModels.RoomType.RoomTypeViewModel

@{
    ViewData["Title"] = "Thêm loại phòng mới";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="fas fa-plus-circle me-2"></i>
                Thêm loại phòng mới
            </h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">
                                <i class="fas fa-tag me-2"></i>@Html.DisplayNameFor(m => m.Name)
                            </label>
                            <input asp-for="Name" class="form-control" placeholder="Ví dụ: Deluxe King Room" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="HotelId" class="form-label">
                                <i class="fas fa-hotel me-2"></i>@Html.DisplayNameFor(m => m.HotelId)
                            </label>
                            <select asp-for="HotelId" asp-items="@ViewBag.Hotels" class="form-select">
                                <option value="">-- Chọn khách sạn --</option>
                            </select>
                            <span asp-validation-for="HotelId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">
                                <i class="fas fa-align-left me-2"></i>@Html.DisplayNameFor(m => m.Description)
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4" 
                                      placeholder="Mô tả chi tiết về loại phòng..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="BasePrice" class="form-label">
                                <i class="fas fa-dollar-sign me-2"></i>@Html.DisplayNameFor(m => m.BasePrice)
                            </label>
                            <input asp-for="BasePrice" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="BasePrice" class="text-danger"></span>
                            <div class="form-text">Đơn vị: VND</div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Capacity" class="form-label">
                                <i class="fas fa-users me-2"></i>@Html.DisplayNameFor(m => m.Capacity)
                            </label>
                            <input asp-for="Capacity" class="form-control" type="number" min="1" />
                            <span asp-validation-for="Capacity" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageFile" class="form-label">
                                <i class="fas fa-image me-2"></i>Hình ảnh loại phòng
                            </label>
                            <input asp-for="ImageFile" class="form-control" type="file" accept="image/*" />
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                            <div class="form-text">Chấp nhận: .jpg, .jpeg, .png, .gif (tối đa 5MB)</div>
                        </div>
                    </div>
                </div>

                <hr class="my-4" />

                <div class="mb-3">
                    <label class="form-label">
                        <i class="fas fa-star me-2"></i>Tiện nghi
                    </label>
                    <div class="card">
                        <div class="card-body">
                            @if (Model.Amenities != null && Model.Amenities.Any())
                            {
                                <div class="row">
                                    @foreach (var amenity in Model.Amenities)
                                    {
                                        <div class="col-md-4 mb-2">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" 
                                                       name="SelectedAmenityIds" value="@amenity.Id" 
                                                       id="amenity-@amenity.Id" />
                                                <label class="form-check-label" for="amenity-@amenity.Id">
                                                    @amenity.Name
                                                </label>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <p class="text-muted mb-0">Chưa có tiện nghi nào. 
                                    <a asp-area="Admin" asp-controller="Amenity" asp-action="Create">Thêm tiện nghi mới</a>
                                </p>
                            }
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-save me-2"></i>
                        Tạo loại phòng
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="fas fa-times me-2"></i>
                        Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
