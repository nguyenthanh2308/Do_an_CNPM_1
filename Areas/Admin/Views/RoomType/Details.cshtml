@model HotelManagementSystem.Models.ViewModels.RoomType.RoomTypeViewModel

@{
    ViewData["Title"] = "Chi tiết loại phòng";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0">
                <i class="fas fa-info-circle me-2"></i>
                Chi tiết loại phòng
            </h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-5">
                    @if (!string.IsNullOrEmpty(Model.DefaultImageUrl))
                    {
                        <img src="@Model.DefaultImageUrl" alt="@Model.Name" 
                             class="img-fluid rounded shadow-sm mb-3" />
                    }
                    else
                    {
                        <div class="text-center p-5 bg-light rounded">
                            <i class="fas fa-image fa-5x text-muted"></i>
                            <p class="mt-3 text-muted">Chưa có hình ảnh</p>
                        </div>
                    }
                </div>

                <div class="col-md-7">
                    <h2 class="mb-3">@Model.Name</h2>
                    
                    <dl class="row">
                        <dt class="col-sm-5">
                            <i class="fas fa-hotel me-2"></i>
                            Khách sạn:
                        </dt>
                        <dd class="col-sm-7">
                            <strong>@Model.HotelName</strong>
                        </dd>

                        <dt class="col-sm-5">
                            <i class="fas fa-dollar-sign me-2"></i>
                            Giá cơ bản:
                        </dt>
                        <dd class="col-sm-7">
                            <span class="badge bg-success fs-5">@Model.BasePrice.ToString("N0") VND/đêm</span>
                        </dd>

                        <dt class="col-sm-5">
                            <i class="fas fa-users me-2"></i>
                            Sức chứa tối đa:
                        </dt>
                        <dd class="col-sm-7">
                            @Model.Capacity người
                        </dd>

                        <dt class="col-sm-5">
                            <i class="fas fa-door-open me-2"></i>
                            Số phòng:
                        </dt>
                        <dd class="col-sm-7">
                            <span class="badge bg-primary">@Model.RoomCount phòng</span>
                        </dd>
                    </dl>

                    <hr class="my-3" />

                    <h5 class="mb-3">
                        <i class="fas fa-align-left me-2"></i>
                        Mô tả
                    </h5>
                    <p class="text-muted">
                        @(Model.Description ?? "Chưa có mô tả")
                    </p>

                    <hr class="my-3" />

                    <h5 class="mb-3">
                        <i class="fas fa-star me-2"></i>
                        Tiện nghi (@(Model.AmenityNames?.Count ?? 0))
                    </h5>
                    @if (Model.AmenityNames != null && Model.AmenityNames.Any())
                    {
                        <div class="row">
                            @foreach (var amenityName in Model.AmenityNames)
                            {
                                <div class="col-md-6 mb-2">
                                    <span class="badge bg-light text-dark border">
                                        <i class="fas fa-check-circle text-success me-1"></i>
                                        @amenityName
                                    </span>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Chưa có tiện nghi nào</p>
                    }
                </div>
            </div>

            <hr class="my-4" />

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="fas fa-edit me-2"></i>
                    Chỉnh sửa
                </a>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>
                        Xóa
                    </a>
                }
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>
                    Quay lại
                </a>
            </div>
        </div>
    </div>
</div>
