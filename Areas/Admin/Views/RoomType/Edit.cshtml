@model HotelManagementSystem.Models.ViewModels.RoomType.RoomTypeViewModel

@{
    ViewData["Title"] = "Chỉnh sửa loại phòng";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">
                <i class="fas fa-edit me-2"></i>
                Chỉnh sửa loại phòng
            </h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="DefaultImageUrl" />
                
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">
                                <i class="fas fa-tag me-2"></i>@Html.DisplayNameFor(m => m.Name)
                            </label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="HotelId" class="form-label">
                                <i class="fas fa-hotel me-2"></i>@Html.DisplayNameFor(m => m.HotelId)
                            </label>
                            <select asp-for="HotelId" asp-items="Model.Hotels" class="form-select">
                                <option value="">-- Chọn khách sạn --</option>
                            </select>
                            <span asp-validation-for="HotelId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">
                                <i class="fas fa-align-left me-2"></i>@Html.DisplayNameFor(m => m.Description)
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="BasePrice" class="form-label">
                                <i class="fas fa-dollar-sign me-2"></i>@Html.DisplayNameFor(m => m.BasePrice)
                            </label>
                            <input asp-for="BasePrice" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="BasePrice" class="text-danger"></span>
                            <div class="form-text">Đơn vị: VND</div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Capacity" class="form-label">
                                <i class="fas fa-users me-2"></i>@Html.DisplayNameFor(m => m.Capacity)
                            </label>
                            <input asp-for="Capacity" class="form-control" type="number" min="1" />
                            <span asp-validation-for="Capacity" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                <i class="fas fa-image me-2"></i>Hình ảnh hiện tại
                            </label>
                            @if (!string.IsNullOrEmpty(Model.DefaultImageUrl))
                            {
                                <div class="mb-2">
                                    <img src="@Model.DefaultImageUrl" alt="@Model.Name" 
                                         class="img-thumbnail" style="max-height: 200px;" />
                                </div>
                            }
                            else
                            {
                                <p class="text-muted">Chưa có hình ảnh</p>
                            }
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageFile" class="form-label">
                                <i class="fas fa-image me-2"></i>Cập nhật hình ảnh (tùy chọn)
                            </label>
                            <input asp-for="ImageFile" class="form-control" type="file" accept="image/*" />
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                            <div class="form-text">Để trống nếu không muốn thay đổi</div>
                        </div>
                    </div>
                </div>

                <hr class="my-4" />

                <div class="mb-3">
                    <label class="form-label">
                        <i class="fas fa-star me-2"></i>Tiện nghi
                    </label>
                    <div class="card">
                        <div class="card-body">
                            @if (Model.Amenities != null && Model.Amenities.Any())
                            {
                                <div class="row">
                                    @foreach (var amenity in Model.Amenities)
                                    {
                                        <div class="col-md-4 mb-2">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" 
                                                       name="SelectedAmenityIds" value="@amenity.Id" 
                                                       id="amenity-@amenity.Id"
                                                       @(Model.SelectedAmenityIds?.Contains(amenity.Id) == true ? "checked" : "") />
                                                <label class="form-check-label" for="amenity-@amenity.Id">
                                                    @amenity.Name
                                                </label>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <p class="text-muted mb-0">Chưa có tiện nghi nào.</p>
                            }
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-warning btn-lg">
                        <i class="fas fa-save me-2"></i>
                        Cập nhật
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="fas fa-times me-2"></i>
                        Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
