@model List<HotelManagementSystem.Models.ViewModels.Booking.BookingViewModel>

@{
    ViewData["Title"] = "Lịch sử đặt phòng";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-history text-primary"></i> Lịch sử đặt phòng</h2>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Trang chủ
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong><i class="fas fa-check-circle"></i> Thành công!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong><i class="fas fa-exclamation-circle"></i> Lỗi!</strong> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Mã đặt phòng</th>
                                <th>Khách sạn</th>
                                <th>Phòng</th>
                                <th>Ngày nhận</th>
                                <th>Ngày trả</th>
                                <th>Tổng tiền</th>
                                <th>Trạng thái</th>
                                <th>Thanh toán</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong>#@item.Id</strong></td>
                                    <td>@item.HotelName</td>
                                    <td>
                                        <div>@item.RoomNumber</div>
                                        <small class="text-muted">@item.RoomTypeName</small>
                                    </td>
                                    <td>@item.CheckInDate.ToString("dd/MM/yyyy")</td>
                                    <td>@item.CheckOutDate.ToString("dd/MM/yyyy")</td>
                                    <td class="fw-bold text-primary">@item.TotalAmount.ToString("N0") VNĐ</td>
                                    <td>
                                        <span class="badge @item.StatusBadgeClass">@item.StatusDisplay</span>
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column gap-1">
                                            <span class="badge @item.PaymentSummary.StatusBadgeClass">
                                                @item.PaymentSummary.StatusDisplay
                                            </span>
                                            @if (item.PaymentSummary.PaidAmount > 0)
                                            {
                                                <small class="text-success">Đã trả: @item.PaymentSummary.PaidAmount.ToString("N0")</small>
                                            }
                                            @if (item.PaymentSummary.RemainingAmount > 0)
                                            {
                                                <small class="text-danger">Còn lại: @item.PaymentSummary.RemainingAmount.ToString("N0")</small>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        <div class="btn-group-vertical btn-group-sm">
                                            <a asp-controller="Booking" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">
                                                <i class="fas fa-eye"></i> Chi tiết
                                            </a>
                                            
                                            @if (!item.PaymentSummary.IsFullyPaid && item.Status != "Cancelled" && item.PaymentStatus != "Paid" && item.Status != "AwaitingConfirmation")
                                            {
                                                <a asp-controller="Booking" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-success">
                                                    <i class="fas fa-credit-card"></i> Thanh toán
                                                </a>
                                            }

                                            @if (item.PaymentStatus == "Paid" && item.Status == "AwaitingConfirmation")
                                            {
                                                <div class="alert alert-info mt-2 mb-0">
                                                    <small><i class="fas fa-info-circle"></i> Đã thanh toán, chờ xác nhận</small>
                                                </div>
                                            }

                                            @if (!string.IsNullOrEmpty(item.InvoiceNumber))
                                            {
                                                <a asp-controller="Booking" asp-action="Invoice" asp-route-id="@item.Id" class="btn btn-outline-secondary">
                                                    <i class="fas fa-file-invoice"></i> Hóa đơn
                                                </a>
                                            }

                                            @if (item.IsCancellable)
                                            {
                                                <form asp-controller="Booking" asp-action="Cancel" method="post" onsubmit="return confirm('Bạn có chắc chắn muốn hủy đặt phòng này?');">
                                                    <input type="hidden" name="id" value="@item.Id" />
                                                    <button type="submit" class="btn btn-outline-danger w-100 mt-1">
                                                        <i class="fas fa-times"></i> Hủy
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-calendar-times fa-4x text-muted mb-3"></i>
            <h4>Bạn chưa có đơn đặt phòng nào</h4>
            <p class="text-muted">Hãy tìm kiếm và đặt phòng ngay hôm nay!</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">
                <i class="fas fa-search me-2"></i>Tìm phòng ngay
            </a>
        </div>
    }
</div>
