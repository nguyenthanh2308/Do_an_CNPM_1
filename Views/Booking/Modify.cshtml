@model HotelManagementSystem.Models.ViewModels.Booking.BookingViewModel

@{
    ViewData["Title"] = "Chỉnh sửa đặt phòng";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-edit"></i> Chỉnh sửa đặt phòng #@Model.Id</h4>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                        </div>
                    }

                    <form asp-action="Modify" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        
                        <div class="mb-4">
                            <h5>Thông tin hiện tại</h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>Khách sạn:</strong> @Model.HotelName</p>
                                    <p><strong>Phòng:</strong> @Model.RoomNumber (@Model.RoomTypeName)</p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>Ngày nhận:</strong> @Model.CheckInDate.ToString("dd/MM/yyyy")</p>
                                    <p><strong>Ngày trả:</strong> @Model.CheckOutDate.ToString("dd/MM/yyyy")</p>
                                </div>
                            </div>
                        </div>

                        <hr />

                        <div class="mb-3">
                            <h5>Thay đổi lịch trình</h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <label class="form-label">Ngày nhận phòng mới</label>
                                    <input type="date" name="newCheckInDate" class="form-control" 
                                           value="@Model.CheckInDate.ToString("yyyy-MM-dd")" min="@DateTime.Today.ToString("yyyy-MM-dd")" required />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Ngày trả phòng mới</label>
                                    <input type="date" name="newCheckOutDate" class="form-control" 
                                           value="@Model.CheckOutDate.ToString("yyyy-MM-dd")" min="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")" required />
                                </div>
                            </div>
                            <div class="form-text text-muted mt-2">
                                Lưu ý: Việc thay đổi ngày có thể ảnh hưởng đến giá phòng và tình trạng phòng trống.
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-controller="Customer" asp-action="MyBookings" class="btn btn-secondary">Hủy bỏ</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
