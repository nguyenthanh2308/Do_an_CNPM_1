@model HotelManagementSystem.Models.ViewModels.Booking.BookingViewModel

@{
    ViewData["Title"] = "Thanh Toán Đặt Phòng";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-credit-card"></i> Thanh Toán Đặt Phòng
                    </h4>
                </div>

                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            <strong><i class="fas fa-check-circle"></i> Thành công!</strong> @TempData["SuccessMessage"]
                        </div>
                    }
                    
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            <strong><i class="fas fa-exclamation-circle"></i> Lỗi!</strong> @TempData["ErrorMessage"]
                        </div>
                    }

                    <h5 class="border-bottom pb-2 mb-3">Thông Tin Đặt Phòng</h5>
                    
                    <div class="row mb-2">
                        <div class="col-sm-4 fw-bold">Mã Đặt Phòng:</div>
                        <div class="col-sm-8">
                            <span class="badge bg-primary">#@Model.Id</span>
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-sm-4 fw-bold">Khách Sạn:</div>
                        <div class="col-sm-8">@Model.HotelName</div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-sm-4 fw-bold">Phòng:</div>
                        <div class="col-sm-8">
                            <span class="badge bg-info">@Model.RoomNumber - @Model.RoomTypeName</span>
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-sm-4 fw-bold">Ngày Nhận:</div>
                        <div class="col-sm-8">
                            <i class="far fa-calendar-check text-success"></i>
                            @Model.CheckInDate.ToString("dd/MM/yyyy")
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-sm-4 fw-bold">Ngày Trả:</div>
                        <div class="col-sm-8">
                            <i class="far fa-calendar-times text-danger"></i>
                            <span id="displayCheckOutDate">@Model.CheckOutDate.ToString("dd/MM/yyyy")</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Số Đêm:</div>
                        <div class="col-sm-8">
                            <div class="input-group" style="max-width: 200px;">
                                <button type="button" class="btn btn-outline-secondary" id="btnDecreaseNights">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <input type="number" id="nightsInput" class="form-control text-center" value="@Model.Nights" min="1" max="30" readonly />
                                <button type="button" class="btn btn-outline-secondary" id="btnIncreaseNights">
                                    <i class="fas fa-plus"></i>
                                </button>
                            </div>
                            <small class="text-muted">Giá/đêm: <span id="pricePerNight">@Model.PricePerNight.ToString("N0")</span> VNĐ</small>
                        </div>
                    </div>

                    <hr />

                    <!-- Promotion Code Section -->
                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Khuyến Mãi:</div>
                        <div class="col-sm-8">
                            @if (string.IsNullOrEmpty(Model.PromotionCode))
                            {
                                <form asp-action="ApplyPromotion" method="post" class="input-group input-group-sm" style="max-width: 350px;">
                                    <input type="hidden" name="bookingId" value="@Model.Id" />
                                    <input type="text" name="promotionCode" class="form-control" placeholder="Nhập mã khuyến mãi" required>
                                    <button class="btn btn-outline-primary" type="submit">Áp dụng</button>
                                </form>
                            }
                            else
                            {
                                <div class="d-flex align-items-center">
                                    <span class="badge bg-success me-2">@Model.PromotionCode</span>
                                    <span class="text-success me-2">-@Model.DiscountAmount.ToString("N0") VNĐ</span>
                                    <form asp-action="RemovePromotion" method="post" style="display:inline;">
                                        <input type="hidden" name="bookingId" value="@Model.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Xóa mã">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </form>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Tổng Tiền:</div>
                        <div class="col-sm-8">
                            <h5 class="text-muted mb-0">
                                @Model.TotalAmount.ToString("N0") VNĐ
                            </h5>
                        </div>
                    </div>

                    @if (Model.DiscountAmount > 0)
                    {
                        <div class="row mb-3">
                            <div class="col-sm-4 fw-bold">Giảm Giá:</div>
                            <div class="col-sm-8">
                                <h5 class="text-danger mb-0">
                                    -@Model.DiscountAmount.ToString("N0") VNĐ
                                </h5>
                            </div>
                        </div>
                    }

                    <div class="row mb-4">
                        <div class="col-sm-4 fw-bold">Thành Tiền:</div>
                        <div class="col-sm-8">
                            <h4 class="text-primary fw-bold mb-0">
                                @((Model.TotalAmount - Model.DiscountAmount).ToString("N0")) VNĐ
                            </h4>
                        </div>
                    </div>

                    <!-- Payment Section -->
                    <div class="card mt-4 border-primary">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="fas fa-credit-card me-2"></i>Phương Thức Thanh Toán</h5>
                        </div>
                        <div class="card-body">
                            <ul class="nav nav-tabs mb-3" id="paymentTabs" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active" id="online-tab" data-bs-toggle="tab" data-bs-target="#online" type="button" role="tab">
                                        <i class="fas fa-globe me-2"></i>Thanh Toán Online
                                    </button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" id="property-tab" data-bs-toggle="tab" data-bs-target="#property" type="button" role="tab">
                                        <i class="fas fa-hotel me-2"></i>Thanh Toán Tại Khách Sạn
                                    </button>
                                </li>
                            </ul>
                            
                            <div class="tab-content" id="paymentTabsContent">
                                <!-- Online Payment -->
                                <div class="tab-pane fade show active" id="online" role="tabpanel">
                                    <form asp-action="ProcessPayment" method="post" id="onlinePaymentForm">
                                        <input type="hidden" name="bookingId" value="@Model.Id" />
                                        <input type="hidden" name="amount" value="@(Model.TotalAmount - Model.DiscountAmount)" />
                                        <input type="hidden" name="nights" id="nightsOnline" value="@Model.Nights" />
                                        
                                        <div class="mb-3">
                                            <label class="form-label fw-bold">Chọn phương thức:</label>
                                            <div class="form-check mb-2">
                                                <input class="form-check-input" type="radio" name="paymentMethod" value="CreditCard" id="methodCard" checked>
                                                <label class="form-check-label" for="methodCard">
                                                    <i class="fas fa-credit-card text-primary me-2"></i>Thẻ Tín Dụng / Ghi Nợ
                                                </label>
                                            </div>
                                            <div class="form-check mb-2">
                                                <input class="form-check-input" type="radio" name="paymentMethod" value="EWallet" id="methodWallet">
                                                <label class="form-check-label" for="methodWallet">
                                                    <i class="fas fa-wallet text-success me-2"></i>Ví Điện Tử (Momo/ZaloPay)
                                                </label>
                                            </div>
                                            <div class="form-check mb-2">
                                                <input class="form-check-input" type="radio" name="paymentMethod" value="BankTransfer" id="methodBank">
                                                <label class="form-check-label" for="methodBank">
                                                    <i class="fas fa-university text-info me-2"></i>Chuyển Khoản Ngân Hàng
                                                </label>
                                            </div>
                                        </div>

                                        <div class="alert alert-info">
                                            <small><i class="fas fa-info-circle"></i> Giao dịch được mô phỏng và sẽ thành công ngay lập tức.</small>
                                        </div>

                                        <button type="submit" class="btn btn-success w-100 py-2 fw-bold">
                                            <i class="fas fa-check-circle me-2"></i>Thanh Toán Ngay @((Model.TotalAmount - Model.DiscountAmount).ToString("N0")) VNĐ
                                        </button>
                                    </form>
                                </div>

                                <!-- Pay at Property -->
                                <div class="tab-pane fade" id="property" role="tabpanel">
                                    <form asp-action="ProcessPayment" method="post" id="propertyPaymentForm">
                                        <input type="hidden" name="bookingId" value="@Model.Id" />
                                        <input type="hidden" name="amount" value="@(Model.TotalAmount - Model.DiscountAmount)" />
                                        <input type="hidden" name="nights" id="nightsProperty" value="@Model.Nights" />
                                        <input type="hidden" name="paymentMethod" value="PayAtProperty" />

                                        <div class="alert alert-warning">
                                            <h6><i class="fas fa-exclamation-circle"></i> Lưu ý:</h6>
                                            <ul class="mb-0 small">
                                                <li>Bạn sẽ thanh toán toàn bộ số tiền khi làm thủ tục nhận phòng.</li>
                                                <li>Vui lòng đến đúng giờ để giữ phòng.</li>
                                            </ul>
                                        </div>

                                        <button type="submit" class="btn btn-primary w-100 py-2 fw-bold">
                                            <i class="fas fa-check me-2"></i>Xác Nhận Đặt Phòng
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Back Button - Cancels booking -->
                    <div class="mt-3">
                        <form asp-action="CancelPendingBooking" method="post" style="display: inline;" 
                              onsubmit="return confirm('Bạn có chắc muốn quay lại? Đặt phòng sẽ bị hủy và xóa khỏi hệ thống.');">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Quay Lại
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-scroll to top on page load
        window.scrollTo(0, 0);
        
        // Nights selection functionality
        (function() {
            const checkInDate = new Date('@Model.CheckInDate.ToString("yyyy-MM-dd")');
            const pricePerNight = @Model.PricePerNight;
            const originalNights = @Model.Nights;
            let currentNights = originalNights;
            
            const nightsInput = document.getElementById('nightsInput');
            const btnIncrease = document.getElementById('btnIncreaseNights');
            const btnDecrease = document.getElementById('btnDecreaseNights');
            const displayCheckOutDate = document.getElementById('displayCheckOutDate');
            
            function formatDate(date) {
                const day = String(date.getDate()).padStart(2, '0');
                const month = String(date.getMonth() + 1).padStart(2, '0');
                const year = date.getFullYear();
                return `${day}/${month}/${year}`;
            }
            
            function formatCurrency(amount) {
                return amount.toLocaleString('vi-VN');
            }
            
            function updateDisplay() {
                nightsInput.value = currentNights;
                
                // Calculate new checkout date
                const newCheckOutDate = new Date(checkInDate);
                newCheckOutDate.setDate(newCheckOutDate.getDate() + currentNights);
                displayCheckOutDate.textContent = formatDate(newCheckOutDate);
                
                // Calculate new total
                const newTotal = pricePerNight * currentNights;
                const discountAmount = @Model.DiscountAmount;
                const finalAmount = newTotal - discountAmount;
                
                // Update total display
                const totalAmountEl = document.querySelector('[id^="totalAmount"]') || 
                    document.querySelectorAll('.text-muted.mb-0 h5')[0]?.closest('div')?.querySelector('h5');
                document.querySelectorAll('.card-body h5.text-muted').forEach(el => {
                    if (el.textContent.includes('VNĐ')) {
                        el.textContent = formatCurrency(newTotal) + ' VNĐ';
                    }
                });
                
                // Update final amount display
                document.querySelectorAll('.card-body h4.text-primary').forEach(el => {
                    if (el.textContent.includes('VNĐ')) {
                        el.textContent = formatCurrency(finalAmount > 0 ? finalAmount : 0) + ' VNĐ';
                    }
                });
                
                // Update hidden form inputs
                document.querySelectorAll('input[name="amount"]').forEach(input => {
                    input.value = finalAmount > 0 ? finalAmount : 0;
                });
                
                // Update hidden nights inputs
                document.querySelectorAll('input[name="nights"]').forEach(input => {
                    input.value = currentNights;
                });
                
                // Update payment button text
                document.querySelectorAll('button[type="submit"]').forEach(btn => {
                    if (btn.textContent.includes('Thanh Toán Ngay')) {
                        btn.innerHTML = '<i class="fas fa-check-circle me-2"></i>Thanh Toán Ngay ' + formatCurrency(finalAmount > 0 ? finalAmount : 0) + ' VNĐ';
                    }
                });
            }
            
            if (btnIncrease) {
                btnIncrease.addEventListener('click', function() {
                    if (currentNights < 30) {
                        currentNights++;
                        updateDisplay();
                    }
                });
            }
            
            if (btnDecrease) {
                btnDecrease.addEventListener('click', function() {
                    if (currentNights > 1) {
                        currentNights--;
                        updateDisplay();
                    }
                });
            }
        })();
    </script>
}
