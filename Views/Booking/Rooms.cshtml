@model List<HotelManagementSystem.Models.ViewModels.Booking.RoomViewModel>

@{
    ViewData["Title"] = "Danh Sách Phòng";
}

<div class="container mt-4">
    <div class="text-center mb-5">
        <h2 class="fw-bold text-primary">Danh Sách Phòng</h2>
        <p class="text-muted">Khám phá các hạng phòng sang trọng và tiện nghi của chúng tôi</p>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var room in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0 room-card">
                    <div class="position-relative">
                        @{
                            var imageUrl = !string.IsNullOrEmpty(room.ImageUrl) 
                                ? room.ImageUrl 
                                : (!string.IsNullOrEmpty(room.RoomType?.DefaultImageUrl) 
                                    ? room.RoomType.DefaultImageUrl 
                                    : "/images/default-room.jpg");
                        }
                        <img src="@imageUrl" 
                             class="card-img-top" alt="@room.RoomType?.Name - @room.Number" style="height: 250px; object-fit: cover;">
                        <span class="position-absolute top-0 end-0 m-2 badge @(room.Status == "Vacant" ? "bg-success" : "bg-danger")">
                            @(room.Status == "Vacant" ? "Còn trống" : "Đã đặt")
                        </span>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title fw-bold">@room.RoomType.Name - @room.Number</h5>
                        <p class="card-text text-muted small">@room.RoomType.Description</p>
                        
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <div class="text-primary fw-bold fs-5">
                                @room.Price.ToString("N0") VNĐ <span class="fs-6 text-muted fw-normal">/ đêm</span>
                            </div>
                            <div class="text-muted small">
                                <i class="fas fa-user-friends"></i> @room.RoomType.Capacity khách
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-white border-top-0 pb-3">
                        <div class="d-flex gap-2">
                            <a asp-action="RoomDetails" 
                               asp-route-roomId="@room.Id"
                               asp-route-checkInDate="@DateTime.Today.ToString("yyyy-MM-dd")"
                               asp-route-checkOutDate="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")"
                               asp-route-numberOfGuests="2"
                               class="btn btn-outline-info flex-fill">
                                <i class="fas fa-info-circle me-1"></i>Chi tiết
                            </a>
                            @if (room.Status == "Vacant")
                            {
                                <form asp-action="Book" method="post" class="flex-fill">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="roomId" value="@room.Id" />
                                    <input type="hidden" name="ratePlanId" value="0" />
                                    <input type="hidden" name="checkInDate" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                                    <input type="hidden" name="checkOutDate" value="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")" />
                                    <input type="hidden" name="numberOfGuests" value="2" />
                                    <button type="submit" class="btn btn-primary w-100">
                                        <i class="fas fa-calendar-check me-1"></i>Đặt Ngay
                                    </button>
                                </form>
                            }
                            else
                            {
                                <button class="btn btn-secondary flex-fill" disabled>
                                    <i class="fas fa-ban me-1"></i>Đã Đặt
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .room-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .room-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }
</style>
