@model HotelManagementSystem.Models.ViewModels.Booking.BookingViewModel

@{
    ViewData["Title"] = "Xác Nhận Đặt Phòng";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-info-circle"></i> Thông Tin Đặt Phòng
                    </h4>
                </div>

                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            <strong><i class="fas fa-check-circle"></i> Thành công!</strong> @TempData["SuccessMessage"]
                        </div>
                    }
                    
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            <strong><i class="fas fa-exclamation-circle"></i> Lỗi!</strong> @TempData["ErrorMessage"]
                        </div>
                    }
                    
                    @if ((Model.Status == "AwaitingPayment" || Model.Status == "Pending") && Model.PaymentStatus == "Unpaid")
                    {
                        <div class="alert alert-warning" role="alert">
                            <strong><i class="fas fa-exclamation-triangle"></i> Vui lòng thanh toán!</strong> Đơn đặt phòng của bạn đang chờ thanh toán để hoàn tất.
                        </div>
                    }

                    <h5 class="border-bottom pb-2 mb-3">Thông Tin Đặt Phòng</h5>
                    
                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Mã Đặt Phòng:</div>
                        <div class="col-sm-8">
                            <span class="badge bg-primary fs-6">#@Model.Id</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Khách Sạn:</div>
                        <div class="col-sm-8">@Model.HotelName</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Phòng:</div>
                        <div class="col-sm-8">
                            <span class="badge bg-info">@Model.RoomNumber - @Model.RoomTypeName</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Ngày Nhận Phòng:</div>
                        <div class="col-sm-8">
                            <i class="far fa-calendar-check text-success"></i>
                            @Model.CheckInDate.ToString("dd/MM/yyyy HH:mm")
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Ngày Trả Phòng:</div>
                        <div class="col-sm-8">
                            <i class="far fa-calendar-times text-danger"></i>
                            @Model.CheckOutDate.ToString("dd/MM/yyyy HH:mm")
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Số Đêm:</div>
                        <div class="col-sm-8">
                            @Model.Nights đêm
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Khách Hàng:</div>
                        <div class="col-sm-8">
                            <i class="fas fa-user"></i> @Model.GuestName
                            @if (!string.IsNullOrEmpty(Model.GuestEmail))
                            {
                                <br /><small class="text-muted">@Model.GuestEmail</small>
                            }
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Trạng Thái:</div>
                        <div class="col-sm-8">
                            <span class="badge @Model.StatusBadgeClass">@Model.StatusDisplay</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Thanh Toán:</div>
                        <div class="col-sm-8">
                            <span class="badge @Model.PaymentStatusBadgeClass">@Model.PaymentStatusDisplay</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Tổng Tiền:</div>
                        <div class="col-sm-8">
                            <h4 class="text-success mb-0">
                                @Model.TotalAmount.ToString("N0") VNĐ
                            </h4>
                            @if (Model.DiscountAmount > 0)
                            {
                                <small class="text-muted">
                                    Giảm giá: @Model.DiscountAmount.ToString("N0") VNĐ<br />
                                    Thành tiền: <strong>@Model.FinalAmount.ToString("N0") VNĐ</strong>
                                </small>
                            }
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.RatePlanName))
                    {
                        <div class="row mb-3">
                            <div class="col-sm-4 fw-bold">Gói Giá:</div>
                            <div class="col-sm-8">
                                <span class="badge bg-secondary">@Model.RatePlanName</span>
                            </div>
                        </div>
                    }


                    else if (Model.PaymentStatus == "Paid" && !string.IsNullOrEmpty(Model.InvoiceNumber))
                    {
                        <div class="card mt-4 border-success">
                            <div class="card-header bg-success text-white">
                                <h5 class="mb-0"><i class="fas fa-check-circle me-2"></i>Đã Thanh Toán</h5>
                            </div>
                            <div class="card-body">
                                <p class="mb-3">Bạn đã thanh toán thành công. Vui lòng chờ xác nhận từ khách sạn.</p>
                                <a asp-action="Invoice" asp-route-id="@Model.Id" class="btn btn-primary">
                                    <i class="fas fa-file-invoice me-2"></i>Xem Hóa Đơn
                                </a>
                            </div>
                        </div>
                    }

@section Scripts {
    <script>
        // Auto-scroll to top on page load
        window.scrollTo(0, 0);
    </script>
}
