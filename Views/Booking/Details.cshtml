@model HotelManagementSystem.Models.ViewModels.Booking.BookingViewModel

@{
    ViewData["Title"] = "Xác Nhận Đặt Phòng";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-info-circle"></i> Thông Tin Đặt Phòng
                    </h4>
                </div>

                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            <strong><i class="fas fa-check-circle"></i> Thành công!</strong> @TempData["SuccessMessage"]
                        </div>
                    }
                    
                    @if ((Model.Status == "AwaitingPayment" || Model.Status == "Pending") && Model.PaymentStatus == "Unpaid")
                    {
                        <div class="alert alert-warning" role="alert">
                            <strong><i class="fas fa-exclamation-triangle"></i> Vui lòng thanh toán!</strong> Đơn đặt phòng của bạn đang chờ thanh toán để hoàn tất.
                        </div>
                    }

                    <h5 class="border-bottom pb-2 mb-3">Thông Tin Đặt Phòng</h5>
                    
                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Mã Đặt Phòng:</div>
                        <div class="col-sm-8">
                            <span class="badge bg-primary fs-6">#@Model.Id</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Khách Sạn:</div>
                        <div class="col-sm-8">@Model.HotelName</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Phòng:</div>
                        <div class="col-sm-8">
                            <span class="badge bg-info">@Model.RoomNumber - @Model.RoomTypeName</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Ngày Nhận Phòng:</div>
                        <div class="col-sm-8">
                            <i class="far fa-calendar-check text-success"></i>
                            @Model.CheckInDate.ToString("dd/MM/yyyy HH:mm")
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Ngày Trả Phòng:</div>
                        <div class="col-sm-8">
                            <i class="far fa-calendar-times text-danger"></i>
                            @Model.CheckOutDate.ToString("dd/MM/yyyy HH:mm")
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Số Đêm:</div>
                        <div class="col-sm-8">
                            @Model.Nights đêm
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Khách Hàng:</div>
                        <div class="col-sm-8">
                            <i class="fas fa-user"></i> @Model.GuestName
                            @if (!string.IsNullOrEmpty(Model.GuestEmail))
                            {
                                <br /><small class="text-muted">@Model.GuestEmail</small>
                            }
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Trạng Thái:</div>
                        <div class="col-sm-8">
                            <span class="badge @Model.StatusBadgeClass">@Model.StatusDisplay</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Thanh Toán:</div>
                        <div class="col-sm-8">
                            <span class="badge @Model.PaymentStatusBadgeClass">@Model.PaymentStatusDisplay</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Tổng Tiền:</div>
                        <div class="col-sm-8">
                            <h4 class="text-success mb-0">
                                @Model.TotalAmount.ToString("N0") VNĐ
                            </h4>
                            @if (Model.DiscountAmount > 0)
                            {
                                <small class="text-muted">
                                    Giảm giá: @Model.DiscountAmount.ToString("N0") VNĐ<br />
                                    Thành tiền: <strong>@Model.FinalAmount.ToString("N0") VNĐ</strong>
                                </small>
                            }
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.RatePlanName))
                    {
                        <div class="row mb-3">
                            <div class="col-sm-4 fw-bold">Gói Giá:</div>
                            <div class="col-sm-8">
                                <span class="badge bg-secondary">@Model.RatePlanName</span>
                            </div>
                        </div>
                    }

                    @if (Model.Status != "Confirmed" && Model.PaymentStatus != "Paid")
                    {
                        <div class="row mb-3">
                            <div class="col-sm-4 fw-bold">Khuyến Mãi:</div>
                            <div class="col-sm-8">
                                @if (string.IsNullOrEmpty(Model.PromotionCode))
                                {
                                    <form asp-action="ApplyPromotion" method="post" class="input-group input-group-sm" style="max-width: 300px;">
                                        <input type="hidden" name="bookingId" value="@Model.Id" />
                                        <input type="text" name="promotionCode" class="form-control" placeholder="Nhập mã khuyến mãi" required>
                                        <button class="btn btn-outline-primary" type="submit">Áp dụng</button>
                                    </form>
                                }
                                else
                                {
                                    <div class="d-flex align-items-center">
                                        <span class="badge bg-success me-2">@Model.PromotionCode</span>
                                        <span class="text-success me-2">-@Model.DiscountAmount.ToString("N0") VNĐ</span>
                                        <form asp-action="RemovePromotion" method="post" style="display:inline;">
                                            <input type="hidden" name="bookingId" value="@Model.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Xóa mã">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </form>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                    else if (Model.DiscountAmount > 0)
                    {
                         <div class="row mb-3">
                            <div class="col-sm-4 fw-bold">Khuyến Mãi:</div>
                            <div class="col-sm-8">
                                <span class="badge bg-success me-2">@Model.PromotionCode</span>
                                <span class="text-success">-@Model.DiscountAmount.ToString("N0") VNĐ</span>
                            </div>
                        </div>
                    }

                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold">Thành Tiền:</div>
                        <div class="col-sm-8">
                            <h4 class="text-primary fw-bold">
                                @((Model.TotalAmount - Model.DiscountAmount).ToString("N0")) VNĐ
                            </h4>
                        </div>
                    </div>


                    @if ((Model.Status == "AwaitingPayment" || Model.Status == "Pending") && Model.PaymentStatus == "Unpaid" && Model.Status != "Cancelled")
                    {
                        <div class="card mt-4 border-primary">
                            <div class="card-header bg-primary text-white">
                                <h5 class="mb-0"><i class="fas fa-credit-card me-2"></i>Thanh Toán</h5>
                            </div>
                            <div class="card-body">
                                <ul class="nav nav-tabs mb-3" id="paymentTabs" role="tablist">
                                    <li class="nav-item" role="presentation">
                                        <button class="nav-link active" id="online-tab" data-bs-toggle="tab" data-bs-target="#online" type="button" role="tab">
                                            <i class="fas fa-globe me-2"></i>Thanh Toán Online
                                        </button>
                                    </li>
                                    <li class="nav-item" role="presentation">
                                        <button class="nav-link" id="property-tab" data-bs-toggle="tab" data-bs-target="#property" type="button" role="tab">
                                            <i class="fas fa-hotel me-2"></i>Thanh Toán Tại Khách Sạn
                                        </button>
                                    </li>
                                </ul>
                                
                                <div class="tab-content" id="paymentTabsContent">
                                    <!-- Online Payment -->
                                    <div class="tab-pane fade show active" id="online" role="tabpanel">
                                        <form asp-action="ProcessPayment" method="post">
                                            <input type="hidden" name="bookingId" value="@Model.Id" />
                                            <input type="hidden" name="amount" value="@(Model.TotalAmount - Model.DiscountAmount)" />
                                            
                                            <div class="mb-3">
                                                <label class="form-label fw-bold">Chọn phương thức:</label>
                                                <div class="form-check mb-2">
                                                    <input class="form-check-input" type="radio" name="paymentMethod" value="CreditCard" id="methodCard" checked>
                                                    <label class="form-check-label" for="methodCard">
                                                        <i class="fas fa-credit-card text-primary me-2"></i>Thẻ Tín Dụng / Ghi Nợ
                                                    </label>
                                                </div>
                                                <div class="form-check mb-2">
                                                    <input class="form-check-input" type="radio" name="paymentMethod" value="EWallet" id="methodWallet">
                                                    <label class="form-check-label" for="methodWallet">
                                                        <i class="fas fa-wallet text-success me-2"></i>Ví Điện Tử (Momo/ZaloPay)
                                                    </label>
                                                </div>
                                                <div class="form-check mb-2">
                                                    <input class="form-check-input" type="radio" name="paymentMethod" value="BankTransfer" id="methodBank">
                                                    <label class="form-check-label" for="methodBank">
                                                        <i class="fas fa-university text-info me-2"></i>Chuyển Khoản Ngân Hàng
                                                    </label>
                                                </div>
                                            </div>

                                            <div class="alert alert-info">
                                                <small><i class="fas fa-info-circle"></i> Giao dịch được mô phỏng và sẽ thành công ngay lập tức.</small>
                                            </div>

                                            <button type="submit" class="btn btn-success w-100 py-2 fw-bold">
                                                <i class="fas fa-check-circle me-2"></i>Thanh Toán Ngay @((Model.TotalAmount - Model.DiscountAmount).ToString("N0")) VNĐ
                                            </button>
                                        </form>
                                    </div>

                                    <!-- Pay at Property -->
                                    <div class="tab-pane fade" id="property" role="tabpanel">
                                        <form asp-action="ProcessPayment" method="post">
                                            <input type="hidden" name="bookingId" value="@Model.Id" />
                                            <input type="hidden" name="amount" value="@(Model.TotalAmount - Model.DiscountAmount)" />
                                            <input type="hidden" name="paymentMethod" value="PayAtProperty" />

                                            <div class="alert alert-warning">
                                                <h6><i class="fas fa-exclamation-circle"></i> Lưu ý:</h6>
                                                <ul class="mb-0 small">
                                                    <li>Bạn sẽ thanh toán toàn bộ số tiền khi làm thủ tục nhận phòng.</li>
                                                    <li>Vui lòng đến đúng giờ để giữ phòng.</li>
                                                </ul>
                                            </div>

                                            <button type="submit" class="btn btn-primary w-100 py-2 fw-bold">
                                                <i class="fas fa-check me-2"></i>Xác Nhận Đặt Phòng
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else if (Model.PaymentStatus == "Paid" && !string.IsNullOrEmpty(Model.InvoiceNumber))
                    {
                        <div class="card mt-4 border-success">
                            <div class="card-header bg-success text-white">
                                <h5 class="mb-0"><i class="fas fa-check-circle me-2"></i>Đã Thanh Toán</h5>
                            </div>
                            <div class="card-body">
                                <p class="mb-3">Bạn đã thanh toán thành công. Vui lòng chờ xác nhận từ khách sạn.</p>
                                <a asp-action="Invoice" asp-route-id="@Model.Id" class="btn btn-primary">
                                    <i class="fas fa-file-invoice me-2"></i>Xem Hóa Đơn
                                </a>
                            </div>
                        </div>
                    }

@section Scripts {
    <script>
        // Auto-scroll to top on page load
        window.scrollTo(0, 0);
    </script>
}
